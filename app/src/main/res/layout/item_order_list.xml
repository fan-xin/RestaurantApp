<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:background="@drawable/item_bg"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/id_iv_image"
        android:scaleType="centerCrop"
        android:layout_width="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/item_image"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_toRightOf="@id/id_iv_image"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_tv_name"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="悠然餐厅"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_tv_label"
            android:layout_marginTop="2dp"
            android:text="悠然餐厅悠然餐厅悠然餐厅悠然餐厅悠然餐厅悠然餐厅悠然餐厅悠然餐厅"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <TextView
        android:id="@+id/id_tv_price"
        android:text="30元"
        android:textColor="#fd8f50"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/id_iv_image"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--下划线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"></View>

</RelativeLayout>